# COPY FEniCS_scripts/FEniCS_2D_td.py /app/
# COPY FEniCS_scripts/test_cases_FEniCS.py /app/
#
# CMD ["python", "/app/FEniCS_1D_ti.py"]
# CMD ["python", "/app/FEniCS_2D_td.py"]
# CMD ["python", "/app/test_cases_FEniCS.py"]
